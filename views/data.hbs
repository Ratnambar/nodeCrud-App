<!DOCTYPE html>
<html>
<head>
	<title>Display Data</title>
	<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<h3 align="center">Students List</h3>
<a href="/" style="text-decoration: none;"><h4 align="center">Create New</h4></a>
<body background="17.jpg">
	<table align="center" border="2" class="table" class="container">
		<thead >
  <tr class="success">
  	<th>Name</th>
  	<th>Age</th>
  	<th>City</th>
  	<th>Company</th>
  </tr>
</thead>

{{#each list}}

  <tr>
  	<div><td class="success">{{this.name}}</td></div>
  	<div><td class="danger">{{this.age}}</td></div>
  	<div><td class="info">{{this.city}}</td></div>
  	<div><td class="warning">{{this.company}}</td></div>
  	<div><td class="success"><a href="/{{this._id}}" style="text-decoration: none;">update</a></td></div>
  	<div><td class="danger"><a href="/delete/{{this._id}}" style="text-decoration: none;">delete</a></td></div>

  </tr>
  {{/each}}
  </table>
</body>
